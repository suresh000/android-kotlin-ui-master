<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="app_font" format="enum">
        <enum name="OpenSans_Bold" value="0" />
        <enum name="OpenSans_BoldItalic" value="1" />
        <enum name="OpenSans_ExtraBold" value="2" />
        <enum name="OpenSans_Italic" value="3" />
        <enum name="OpenSans_Light" value="4" />
        <enum name="OpenSans_Regular" value="5" />
        <enum name="OpenSans_Semibold" value="6" />
    </attr>

    <declare-styleable name="CustomTextView">
        <attr name="app_font" />
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="app_font" />
    </declare-styleable>

    <declare-styleable name="CustomAutoCompleteTextView">
        <attr name="app_font" />
    </declare-styleable>

</resources>